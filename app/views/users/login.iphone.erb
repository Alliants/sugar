
<div id="login" class="login_box">
	<% form_tag(login_users_path, :class => 'form') do %>
		<p>
			<label>Username</label>
			<%= text_field_tag 'username', '', :class => :text %>
		</p>
		<p>
			<label>Password</label>
			<%= password_field_tag 'password', '', :class => :text %>
		</p>
		<p>
			<%= submit_tag "Login" %>
		</p>
	<% end %>
</div>

<div id="password-reminder" class="login_box">
	<% form_tag(forgot_password_users_path, :class => 'form') do %>
		<p>Enter your email address, and we'll send you a new password.</p>
		<p>
			<label>Email</label>
			<%= text_field_tag 'email', '', :class => :text %>
			<p>
				<%= submit_tag "Send" %>
			</p>
		</p>
	<% end %>
</div>

<div id="login-functions">
	<p>
		<%= link_to_function "Password reminder", "forgot_password();" %> 
		<span class="separator">|</span>
		<%= link_to "Use regular site" %>
	</p>
</div>


<script type="text/javascript">
	Element.hide('password-reminder');
	function forgot_password() {
		Element.toggle('login');
		Element.toggle('password-reminder');
	}
</script>