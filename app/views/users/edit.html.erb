<% @page_title = "Edit profile" %>

<h2 class="section"><%= link_to "Users", users_path %> &raquo; <%= profile_link(@user) %> &raquo; <%= link_to "Edit", edit_user_path(:id => @user.username) %> </h2>

<% form_for(@user) do |f| %>
	<p>
		<label>Username</label>
		<%= f.text_field(:username, :disabled => !@current_user.admin?) %>
	</p>
	<p>
		<label>Image/Avatar</label>
		Upload a picture to <%= link_to "Gravatar", "http://www.gravatar.com/" %> using your registered email to get an avatar.
	</p>
	<p>
		<label>Real name</label>
		<%= f.text_field(:realname) %>
	</p>
	<p>
		<label>Location</label>
		<%= f.text_field(:location) %>
	</p>
	<p>
		<label>Birthday <span class="description">&mdash; Your age won't be shown, but your birthday will</label>
		<%= f.date_select(:birthday, :start_year => 1900) %>
	</p>
	<p>
		<label>Email address <span class="description">&mdash; Required</span></label>
		<%= f.text_field(:email) %>
	</p>
	<p>
		<label>Password <span class="description">&mdash; Enter twice to change</span></label>
		<%= f.password_field(:password) %><br />
		<%= f.password_field(:confirm_password) %>
	</p>
	<p>
		<label>Profile text</label>
		<%= f.text_area(:description, :rows => 8, :cols => 80) %>
	</p>
	
	<% if @current_user.admin? %>
		<h3>Admin options</h3>
		<p>You are an admin, and can change the following options:</p>
		<p>
			<%= f.check_box(:activated) %> Activated<br />
			<%= f.check_box(:banned) %> Banned<br />
			<%= f.check_box(:admin) %> Administrator<br />
		</p>
	<% end %>
	
	<p>
		<%= submit_tag "Save" %>
	</p>
<% end %>