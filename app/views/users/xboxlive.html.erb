<% 
	add_body_class "users"
	@page_title = "Xbox Live Users" 
%>

<h2 class="section">
	<%= link_to "Users", users_path %> &raquo; <%= link_to "Xbox Live", xboxlive_users_path %>
</h2>

<table class="list users_list">
	<tr>
		<th></th>
		<th>Username</th>
		<th>Gamertag</th>
		<th>Gamerscore</th>
		<th>Reputation</th>
		<th>Zone</th>
		<th>Status</th>
		<th>Info</th>
	</tr>
	<% @users.each do |user| %><tr>
		<td class="xbox_tile"><%= image_tag(user.xbox.tile_url, :size => '24x24') if user.xbox.tile_url? %></td>
		<td class="username"><%= profile_link(user) %></td>
		<td class="xbox_gametag"><%= link_to user.gamertag, "http://live.xbox.com/member/"+user.gamertag.gsub(" ","+") %></td>
		<td class="xbox_gamerscore"><%= user.xbox.gamerscore %></td>
		<td class="xbox_gamerscore"><%= user.xbox.reputation.to_i %>%</td>
		<td class="xbox_zone"><%= user.xbox.zone %></td>
		<td class="xbox_status<%= " xbox_online" if user.xbox_online? %>"><%= user.xbox.status_text %>
		</td>
		<td class="xbox_info<%= " xbox_online" if user.xbox_online? %>">
			<%= [user.xbox.info, user.xbox.info2].reject{|i| !i || i.empty?}.join(" &ndash; ") %>
		</td>
	</tr><% end %>
</table>