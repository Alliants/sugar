<%
  add_body_class "users"
  @page_title = "Steam Users"
%>

<div class="functions">
  <%= render partial: 'users_functions' %>
</div>

<h2 class="section">
  <%= link_to "Users", users_path %> &raquo; <%= link_to "Steam ID", steam_users_path %>
</h2>

<%= render partial: 'list_navigation' %>

<table class="list users_list">
  <tr>
    <th>Username</th>
    <th>Steam ID</th>
  </tr>
  <% @users.each do |user| %><tr>
    <td class="username"><%= profile_link(user) %></td>
    <td class="steam_id"><%= link_to user.steam, "http://steamcommunity.com/id/" + url_encode(user.steam) %></td>
  </tr><% end %>
</table>
