<%
  add_body_class "edit_post"
  @page_title = "Edit post"
%>

<% unless request.xhr? %>
<h2 class="section">
  <%= link_to h(@discussion.category.name), category_path(@discussion.category) %> &raquo;
  <% if @discussion.labels? %>[<%= @discussion.labels.join(",") %>]<% end %>
  <%= link_to h(@discussion.title), discussion_path(@discussion) %> &raquo;
  <%= link_to "Edit post", edit_discussion_post_path(@discussion,@post) %>
</h2>
<% end %>

<%= form_for(@post, :url => discussion_post_path(@discussion,@post)) do |f| %>
  <%= f.hidden_field(:format, class: "format") %>
  <p>
    <%= f.text_area(
      :body,
      :id                   => "edit-post-body-#{@post.id}",
      :class                => "rich",
      "data-format-binding" => ".format",
      "data-formats"        => "markdown html"
    ) %>
  </p>
  <p><button type="submit">Save</button></p>
<% end %>
