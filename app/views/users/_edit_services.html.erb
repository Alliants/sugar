<%= labelled_field f.text_field(:website, :size => 50), "Web site", :errors => @user.errors[:website] %>
<% if Sugar.config(:facebook_app_id) %>
	<p>
		<label>Facebook</label>
		<% if @user.facebook_uid? %>
			You have connected your Facebook account. <%= link_to "Remove?", disconnect_facebook_users_path %>
		<% else %>
			<fb:login-button size="large" length="long"></fb:login-button>
			<script type="text/javascript">
				window.onFacebookLogin = function(){
					document.location = "<%= connect_facebook_users_path %>";
				}
			</script>
		<% end %>
	</p>
<% end %>
