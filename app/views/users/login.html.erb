<%
	add_body_class "login"
	@page_title = "Login"
%>

<h2 class="section">
	<%= link_to "Login", login_users_path %>
</h2>

<div id="login">
	<% form_tag(login_users_path, :class => 'form') do %>
		<fieldset>
			<label>Username</label>
			<%= text_field_tag 'username', '', :class => :text %>
		</fieldset>
		<fieldset>
			<label>Password</label>
			<%= password_field_tag 'password', '', :class => :text %>
		</fieldset>
		<!--
		<h3>OpenID login (<%= link_to "What's this?", "http://openid.net/what/" %>)</h3>
		-->
		<fieldset>
			<label>OpenID URL</label>
			<%= text_field_tag 'openid_url', '', :class => :text %>
		</fieldset>
		<fieldset>
			<%= submit_tag "Login" %>
			<%= link_to "I forgot my password", password_reset_users_path %>
		</fieldset>
	<% end %>
</div>