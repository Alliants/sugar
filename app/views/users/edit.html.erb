<% @page_title = "Edit profile" %>

<h2 class="section"><%= link_to "Users", users_path %> &raquo; <%= profile_link(@user) %> &raquo; <%= link_to "Edit", edit_user_path(:id => @user.username) %> </h2>

<% form_for(@user) do |f| %>
	<p>
		<label>Username</label>
		<%= f.text_field(:username, :disabled => !@current_user.admin?) %>
	</p>
	<p>
		<label>Avatar URL <span class="description">&mdash; Enter a link to a 32x32px image</span></label>
		<%= f.text_field(:avatar_url) %><br />
		Alternatively, upload a picture to <%= link_to "Gravatar", "http://www.gravatar.com/" %> 
		using your registered email to get an avatar.
	</p>
	<p>
		<label>Real name</label>
		<%= f.text_field(:realname) %>
	</p>
	<p>
		<label>Location</label>
		<%= f.text_field(:location) %>
	</p>
	<p>
		<label>Web site</label>
		<%= f.text_field(:website) %>
	</p>
	<p>
		<label>MSN Messenger</label>
		<%= f.text_field(:msn) %>
	</p>
	<p>
		<label>Google Talk</label>
		<%= f.text_field(:gtalk) %>
	</p>
	<p>
		<label>AIM</label>
		<%= f.text_field(:aim) %>
	</p>
	<p>
		<label>Xbox Live Gamertag</label>
		<%= f.text_field(:gamertag) %>
	</p>
	<p>
		<label>Twitter username</label>
		<%= f.text_field(:twitter) %>
	</p>
	<p>
		<label>Flickr username</label>
		<%= f.text_field(:flickr) %>
	</p>
	<p>
		<label>Last.fm username</label>
		<%= f.text_field(:last_fm) %>
	</p>
	<p>
		<label>Birthday <span class="description">&mdash; Your age won't be shown, but your birthday will</label>
		<%= f.date_select(:birthday, :start_year => 1900) %>
	</p>
	<p>
		<label>Email address <span class="description">&mdash; Required</span></label>
		<%= f.text_field(:email) %>
	</p>
	<p>
		<label>Password <span class="description">&mdash; Enter twice to change</span></label>
		<%= f.password_field(:password) %><br />
		<%= f.password_field(:confirm_password) %>
	</p>
	<p>
		<label>I'm at work <span class="description">&mdash; Disables thread titles in URLs</span></label>
		<%= f.check_box(:work_safe_urls) %>
	</p>
	<p>
		<label>Stylesheet URL <span class="description">&mdash; Enter a URL here to override the stylesheet</span></label>
		<%= f.text_field(:stylesheet_url) %>
	</p>
	<p>
		You can download the newest version of the default theme here: <%= link_to "b3s_default_theme.zip", "/b3s_default_theme.zip" %>
	</p>
	<p>
		<label>Profile text</label>
		<%= f.text_area(:description, :rows => 8, :cols => 80) %>
	</p>
	
	<% if @current_user.admin? %>
		<h3>Admin options</h3>
		<p>You are an admin, and can change the following options:</p>
		<p>
			<%= f.check_box(:activated) %> Activated<br />
			<%= f.check_box(:banned) %> Banned<br />
			<%= f.check_box(:html_disabled) %> Disable HTML posting<br />
			<%= f.check_box(:trusted) %> Trusted<br />
			<%= f.check_box(:admin) %> Administrator<br />
		</p>
		<p>These don't do anything yet, but at least they are configurable:</p>
		<p>
			<%= f.check_box(:moderator) %> Moderator<br />
			<%= f.check_box(:user_admin) %> User administator<br />
		</p>
	<% end %>
	
	<p>
		<%= submit_tag "Save" %>
	</p>
<% end %>