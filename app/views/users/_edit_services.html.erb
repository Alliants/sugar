<%= labelled_field f.text_field(:website, :size => 50), "Web site", :errors => @user.errors[:website] %>
<% if @current_user == @user && Sugar.config(:facebook_app_id) %>
  <p class="field">
    <label>Facebook</label>
    <% if @user.facebook_uid? %>
      You have connected your Facebook account. <%= link_to 'Remove?', disconnect_facebook_path, :method => :post %>
    <% else %>
      <%= link_to 'Connect with Facebook', facebook_oauth_url(connect_facebook_url), :class => 'fb_button' %>
    <% end %>
  </p>
<% end %>
