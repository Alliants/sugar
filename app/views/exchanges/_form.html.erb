<%= f.hidden_field :type %>
<% if @recipient %>
  <%= hidden_field_tag :recipient_id, @recipient.id %>
<% end %>

<%= labelled_field f.text_field(:title, class: 'text title'), "Title", errors: @exchange.errors[:title] %>
<%= f.hidden_field(:format, class: "format") %>
<%= labelled_field f.text_area(:body, id: 'compose-body', class: :rich, "data-format-binding" => ".format", "data-formats" => "markdown html", "data-remember-format" => @exchange.new_record?), 'First post', errors: @exchange.errors[:body] %>

<% if @exchange.kind_of?(Discussion) %>
  <%= labelled_field f.select(:category_id, @categories.map{|c| [c.name, c.id] } ), "Category", errors: @exchange.errors[:category_id] %>
<% end %>

<p>
  <%= f.check_box(:nsfw) %> Mark as NSFW<br />
  <% if @exchange.closeable_by?(current_user) %>
    <%= f.check_box(:closed) %> Closed<br />
  <% end %>
  <% if @exchange.kind_of?(Discussion) && current_user.moderator? %>
    <%= f.check_box(:sticky) %> Sticky<br />
  <% end %>
</p>
