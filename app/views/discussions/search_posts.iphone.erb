<% 
	@page_title = "\"#{@search_query}\" in " + h(@discussion.title)
%>
<%# @page_title = "Posts: \"#{@search_query}\"" %>

<% if @posts %>
	<%= render :partial => 'posts/posts', :locals => {:posts => @posts, :title => false} %>
<% else %>
	<div class="page_content">
		<p>No posts were found.</p>
	</div>
<% end %>