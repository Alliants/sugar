<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title><%= [@site_name,@page_title].compact.join(' - ') %></title>
	<%= javascript_include_tag :defaults %>
	<% if @current_user.stylesheet_url? %>
		<%= stylesheet_link_tag @current_user.stylesheet_url %>
	<% else %>
		<%= stylesheet_link_tag 'default/screen' %>
	<% end %>
</head>
<body>
	<div id="header">
		<h1>BUTT<em>3</em>RSCOTCH</h1>
		<ul id="navigation">
			<li<%= ' class="current"' if @section == :discussions %>><%= link_to "Discussions", discussions_path %></li>
			<li<%= ' class="current"' if @section == :participated %>><%= link_to "Participated", participated_user_path(:id => @current_user.username) %></li>
			<!--
			<li><%= link_to "Bookmarked", bookmarked_discussions_path %></li>
			-->
			<li<%= ' class="current"' if @section == :categories %>><%= link_to "Categories", categories_path %></li>
			<li<%= ' class="current"' if @section == :users %>><%= link_to "Users", users_path %></li>
			<!--
			<li class="new"><%= link_to "Messages <em>(2)</em>" %></li>
			-->
		</ul>
	</div>
	<div id="content">
		<% if flash[:notice] %>
			<div class="notice"><%= flash[:notice] %></div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
