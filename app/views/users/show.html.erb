<% 
	add_body_class "user_profile"
	@page_title = "#{@user.username}" 
%>

<h2 class="section"><%= link_to "Users", users_path %> &raquo; <%= profile_link(@user) %></h2>

<p>
	<% if @user.avatar_url? %>
		<%= image_tag @user.avatar_url, :alt => @user.username, :size => '32x32' %>
	<% else %>
		<%= image_tag @user.gravatar_url(:size => 80), :alt => @user.username, :size => '80x80' %>
	<% end %>
</p>

<% if @user == @current_user %>
	<p>This is your profile, you can <%= link_to "edit it", edit_user_path(:id => @user.username) %>.</p>
<% elsif @current_user.admin? %>
	<p>You are an admin, and you can <%= link_to "edit #{possessive(@user.username)} profile", edit_user_path(:id => @user.username) %>.</p>
<% end %>

<% if @user.banned? %>
	<p class="banned"><%= @user.username %> is banned!</p>
<% end %>

<table class="userinfo">
	<% if @user.realname? %><tr>
		<th>Real name</th>
		<td><%= h @user.realname %></td>
	</tr><% end %>
	<% if @user.location? %><tr>
		<th>Location</th>
		<td><%= h @user.location %></td>
	</tr><% end %>
	<% if @user.birthday? %><tr>
		<th>Birthday</th>
		<td><%= @user.birthday.strftime("%b %d") %></td>
	</tr><% end %>
	<% if @user.website? %><tr>
		<th>Web site</th>
		<td><%= link_to @user.website, @user.website %></td>
	</tr><% end %>

	<% if @user.msn? %><tr>
		<th>MSN Messenger</th>
		<td><%= h @user.msn %></td>
	</tr><% end %>
	<% if @user.gtalk? %><tr>
		<th>Google Talk</th>
		<td><%= h @user.gtalk %></td>
	</tr><% end %>
	<% if @user.aim? %><tr>
		<th>AIM</th>
		<td><%= link_to @user.aim, "aim:GoIM?screenname=#{CGI.escape(@user.aim)}&message=Hello%20from%20B3S" %></td>
	</tr><% end %>
	<% if @user.twitter? %><tr>
		<th>Twitter</th>
		<td><%= link_to @user.twitter, "http://www.twitter.com/#{@user.twitter}" %></td>
	</tr><% end %>
	<% if @user.flickr? %><tr>
		<th>Flickr</th>
		<td><%= link_to @user.flickr, "http://www.flickr.com/photos/#{@user.flickr}/" %></td>
	</tr><% end %>
	<% if @user.last_fm? %><tr>
		<th>Last.fm</th>
		<td><%= link_to @user.last_fm, "http://www.last.fm/user/#{@user.last_fm}" %></td>
	</tr><% end %>

	<% if @user.gamertag? %><tr>
		<th>Xbox Live</th>
		<td><%= h @user.gamertag %></td>
	</tr><% end %>
	<% if @user.inviter %><tr>
		<th>Invited by</th>
		<td><%= profile_link(@user.inviter) %></td>
	</tr><% end %>
	<tr>
		<th>Member since</th>
		<td><%= formatted_time(@user.created_at) %></td>
	</tr>
	<tr>
		<th>Last active</th>
		<td><%= @user.online? ? "<strong>Online now</strong>" : formatted_time(@user.last_active) %></td>
	</tr>
	<tr>
		<th>Discussions created</th>
		<td><%= @user.discussions_count %></td>
	</tr>
	<tr>
		<th>Post count</th>
		<td><%= link_to @user.posts_count, participated_user_path(:id => @user.username) %></td>
	</tr>
	<tr>
		<th>Users invited</th>
		<td><%= @user.invitees.count %></td>
	</tr>
</table>

<%= format_post @user.description if @user.description? %>